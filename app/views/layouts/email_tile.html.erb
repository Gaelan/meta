<!-- start text/html -->
<div class="border-bottom-grey-4" style="width:100%;  margin:0 auto; padding:0; background-color:#ffffff;">
<table bgcolor="#ffffff" align="center" border="0" cellpadding="0" cellspacing="0" style="display:block; margin:0 auto; width:100%;">
<tbody align="center" style="display:block; margin:0 auto; width:100%;">
<tr align="center" style="display:block; margin:0 auto; width:100%;">
<td class="width-toggle" align="center" style="display:block; margin:0 auto;">
<center>
  <!-- inner / gutter -->
    <div class="width-toggle" align="center" style="max-width:600px; margin:0 auto; padding-right:5px; padding-left:5px;">
     <!-- header row -->
       <table class="width-toggle" align="center" bgcolor="#ffffff" border="0" cellpadding="0" cellspacing="0" style="max-width:600px; display:block;">
            <tbody class="width-toggle" style="display:block;">
            <tr class="width-toggle" style="display:block;">
              <!-- logo -->
                <td style="width:32%; display:inline-block; padding-top:10px; padding-bottom:10px;">
                  <div style="display:block; min-width:100%;">
                        <a href="#">
                            <img src="https://dl.dropboxusercontent.com/u/9519836/asm-mention-email/logo.gif" width="180" style="display: block; width:180px; max-width:100%" alt="" />
                        </a>
                    </div>
                </td><!-- tagline --><!--
             --><td align="right" style="width:67%; display:inline-block; text-align:right; padding-top:10px; padding-bottom:10px; line-height:20px">
                  <div style="display:inline-block; margin:0 0 0 auto; width:100%; text-align:right;">
                      <font class="h5 collapse grey-2">
                        <% @date ||= Date.today %>
                        <%= @fun || "#{@date.strftime('%A')}s are so good." %>
                      </font>
                    </div>
                </td>
            </tr>
            </tbody>
       </table>
    </div>
</center>
</tbody>
</tr>
</td>
</table>
</div>
